        <p class=""><span>🦑 sea creatures</span> <input class="checkboxCat" type="checkbox" name="type" value="seaCreatures" checked></p>
        <p class=""><span>👾 extraterrestrials</span> <input class="checkboxCat" type="checkbox" name="type" value="extraterrestrials" checked></p>
        <p class=""><span>👽 ufos</span> <input class="checkboxCat" type="checkbox" name="type" value="ufos" checked></p>
        <p class=""><span>👻 ghosts</span> <input class="checkboxCat" type="checkbox" name="type" value="ghosts" checked></p>
        <p class=""><span>💩 weird stuff</span> <input class="checkboxCat" type="checkbox" name="type" value="weirdStuff" checked></p>
        <p class=""><span>👂🏻 psychophonies</span> <input class="checkboxCat" type="checkbox" name="type" value="psychophonies" checked></p>
        {{!-- <p class=""><span>🧠 paranormal</span> <input class="checkboxCat" type="checkbox" name="type" value="paranormal" checked></p> --}}
        <p class=""><span>🏚 abandoned places</span> <input class="checkboxCat" type="checkbox" name="type" value="abandonedPlaces" checked></p>
        <p class=""><span>🌾 signals</span> <input class="checkboxCat" type="checkbox" name="type" value="signals" checked></p>
        <p class=""><span>🧟‍♂️ half-human</span> <input class="checkboxCat" type="checkbox" name="type" value="halfHuman" checked></p>
        <p class=""><span>⛪️ religious apparitions</span> <input class="checkboxCat" type="checkbox" name="type" value="religiousApparitions" checked></p>
        <p class=""><span>🌈 natural phenomena</span> <input class="checkboxCat" type="checkbox" name="type" value="naturalPhenomena" checked></p>
        <p class=""><span>🙈 unclassified</span> <input class="checkboxCat" type="checkbox" name="type" value="unclassified" checked></p>
      </form>
    </div>
{{else}}
  <nav class="right">
    <div class="actions">
      <a class="logoutBtn" href="/auth/logout"><span class="x-logout">{{!-- logout --}}</span></a>
    </div>
  </nav>
{{/if}}
