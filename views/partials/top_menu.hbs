
{{#if map}}
  <nav class="topMenu">
    <form class="search">
      <button class="mGlass" id="mGlass" href="#"><span class="x-search">{{!-- search --}}</span></button>
      <input id="searchInput" type="text" placeholder="search...">
    </form>
    <div class="actions">
      <a class="filtersBtn" id="filtersBtn" href="#"><span class="x-filters">{{!-- filters --}}</span></a>
      <a class="logoutBtn" href="/auth/logout"><span class="x-logout">{{!-- logout --}}</span></a>
    </div>
    <div class="filtersBox" id="filtersBox">
      <form class="filtersForm" action="#" method="get">
        <h3 class="filtersTitle"><span>phenomena filters</span> <input id="showAll" type="checkbox" name="type" value="showAll" checked></h3>
