    <div class="phenomName">
      <label for="name">Name</label>
      <input type="text" class="form-control" rows="3" name="name" value="{{phenomenon.name}}"></input>
    </div>

    <div class="actualType">
      <label>Actual type:</label><span>{{phenomenon.type}}</span>
    </div>
    

    <div class="phenomType">
      <label for="type">Change Type</label>
      <select name="type" class="form-control" value="{{phenomenon.type}}">
        <option value="fantasticAnimals">🦄 Fanatic Animals</option>
        <option value="seaCreatures">🦑 Sea Creatures</option>
        <option value="extraterrestrials">👾 Extraterrestrials</option>
        <option value="ufos">👽 Ufos</option>
        <option value="ghosts">👻 Ghosts</option>
        <option value="weirdStuff">💩 Weird Stuff</option>
        <option value="psychophonies">👂🏻 Psychophonies</option>
        <option value="paranormal">🧠 Paranormal</option>
        <option value="abandonedPlaces">🏚 Abandoned places</option>
        <option value="signals">🌾 Signals</option>
        <option value="halfHuman">🧟‍♂️ Half-human</option>
        <option value="religiousApparitions">⛪️ Religious Apparitions</option>
        <option value="naturalPhenomena">🌈 Natural Phenomena</option>
        <option value="unclassified">🙈 unclassified</option>
      </select>
    </div>

    <div class="phenomDescription">
      <label for="description">Description</label>
      <textarea class="descripText" name="description" value="{{phenomenon.description}}"></textarea>
    </div>

    <button type="submit">Edit</button>
  </form>

  <a class="cancel" href="/phenomena/{{phenomenon.id}}">Cancel</a>


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

