
<div class="addForm">
  <form action="/addPhenomenon" method="post" enctype="multipart/form-data">
    <input type="file" name="file" id="file" class="inputfile" data-multiple-caption="{count} files selected" multiple />
    <label class="addFileLabel " for="file"><img class="addFilePh"src="/images/avatars/addimg.png" alt="addImgIcon"></img>
      <p></p>
    </label>

    <div class="form-group">
      <input type="hidden" name="latitude" placeholder="latitude">
      <input type="hidden" name="longitude" placeholder="longitude">
      <div style="color:green" class="locationStatus"></div>
    </div>

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" rows="3" name="name"></input>
    </div>

    <div class="form-group">
      <label for="type">Type</label>
      <select name="type" class="form-control">
        <option value="fantasticAnimals">🦄 Fanatic Animals</option>
        <option value="seaCreatures">🦑 Sea Creatures</option>
        <option value="extraterrestrials">👾 Extraterrestrials</option>
        <option value="ufos">👽 Ufos</option>
        <option value="ghosts">👻 Ghosts</option>
        <option value="weirdStuff">💩 Weird Stuff</option>
        <option value="psychophonies">👂🏻 Psychophonies</option>
        <option value="paranormal">🧠 Paranormal</option>
        <option value="signals">🌾 Signals</option>
        <option value="half-human">🧟‍♂️ Half-human</option>
        <option value="religiousApparitions">⛪️ Religious Apparitions</option>
        <option value="naturalPhenomena">🌈 Natural Phenomena</option>
        <option value="unclassified">🙈 unclassified</option>
      </select>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" rows="3" name="description"></textarea>
    </div>

    <button class="addBtn" type="submit">Add</button>
  </form>

</div>

<script src="../javascripts/fileUpload.js"></script>
<script src="../javascripts/geolocate.js"></script>
<script src="../javascripts/createPhenom.js"></script>